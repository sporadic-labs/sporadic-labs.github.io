@import "../../style/variables.styl"


.form
  margin auto
  max-width: 100%

.label
  display: block
  width: 100%

.control
  width: 100%
  padding 8px
  border-radius 4px
  border 1px solid #bcbcbc
  font-family body-font-stack

.field
  width 100%
  margin-bottom 1rem

.submit-btn
  font-family body-font-stack
  background-color #bcbcbc
  padding 10px 12px
  border-radius 4px
  border 1px solid #ababab
  border none
  &:hover
    cursor pointer